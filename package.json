{
    "name": "starport",
    "description": "Launch Pad Backend",
    "version": "0.1.0",
    "bin": {
        "app": "bin/app.js"
    },
    "scripts": {
        "build": "rm -rf dist && esbuild ./service/src/**/*.ts --entry-names=[dir]/[name]/index --bundle   --platform=node --target=node16.14 --outdir=./dist/",
        "watch": "tsc -w",
        "cdk": "cdk",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "npm run lint:fix && prettier --write \"**/*.{js,ts,json}\""
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.115",
        "@types/node": "18.14.6",
        "@typescript-eslint/eslint-plugin": "^5.59.9",
        "@typescript-eslint/parser": "^5.59.9",
        "aws-cdk": "2.70.0",
        "esbuild": "^0.17.19",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "~4.9.5"
    },
    "dependencies": {
        "aws-cdk-lib": "2.70.0",
        "constructs": "^10.0.0",
        "dotenv": "^16.0.3",
        "jwt-decode": "^3.1.2",
        "serverless-mysql": "^1.5.5"
    }
}
